<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/MainLayout"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@android:color/white"
	android:gravity="center"
	>
	<ImageView
		android:src="@drawable/epi_banner_pb"
		android:adjustViewBounds="true" android:layout_gravity="center" android:layout_marginBottom="40dp"
		android:contentDescription="Epi Info home screen"  android:layout_marginTop="30dp"
		android:layout_height="0dp" android:layout_width="wrap_content" android:layout_weight="0.3"/>
	<Button
		android:id="@+id/btnMapView"
		android:contentDescription="Click here to collect data"
		android:layout_height="66dp" android:layout_width="230dp" android:layout_margin="10dp"
		android:background="@drawable/btn_data_collection_land"
		/>
	<View
		android:layout_width="10dp"
		android:layout_height="100dp"/>
</LinearLayout>