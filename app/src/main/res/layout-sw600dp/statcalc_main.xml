<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	    android:layout_height="fill_parent"
	    android:layout_width="fill_parent"
	    android:background="#FFFFFFFF"
	    android:orientation="vertical">
	    <LinearLayout
			android:orientation="vertical" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:layout_margin="30dp"
			android:gravity="center">
			<ImageView
				android:layout_height="125dp"
				android:layout_width="325dp"
				android:gravity="center"
				android:src="@drawable/statcalc_rect"/>
		</LinearLayout>
<LinearLayout 
	android:orientation="vertical" 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:layout_marginTop="5dp"
	android:gravity="center_horizontal">
		<Button 
	    	android:id="@+id/btnPS"
	    	android:layout_width="418dp"
	    	android:layout_height="50dp"
	    	android:layout_margin="10dp"
	    	android:background="@drawable/sc_btn_ps"/>
		<Button 
	    	android:id="@+id/btnUCC"
	    	android:layout_width="418dp"
	    	android:layout_height="50dp"
	    	android:layout_margin="10dp"
	    	android:background="@drawable/sc_btn_ucc"/>
		<Button 
	    	android:id="@+id/btnCCS"
	    	android:layout_width="418dp"
	    	android:layout_height="50dp"
	    	android:layout_margin="10dp"
	    	android:background="@drawable/sc_btn_ccs"/>
		<Button 
	    	android:id="@+id/btn2x2"
	    	android:layout_width="418dp"
	    	android:layout_height="50dp"
	    	android:layout_margin="10dp"
	    	android:background="@drawable/sc_btn_2x2"/>
		<Button 
	    	android:id="@+id/btnMatchedPair"
	    	android:layout_width="418dp"
	    	android:layout_height="50dp"
	    	android:layout_margin="10dp"
	    	android:background="@drawable/sc_btn_matched_pair"/>
				<Button 
	    	android:id="@+id/btnChiSq"
	    	android:layout_width="418dp"
	    	android:layout_height="50dp"
	    	android:layout_margin="10dp"
	    	android:background="@drawable/sc_btn_chi_sq"/>
		<Button 
	    	android:id="@+id/btnPoisson"
	    	android:layout_width="418dp"
	    	android:layout_height="50dp"
	    	android:layout_margin="10dp"
	    	android:background="@drawable/sc_btn_poisson"/>
		<Button 
	    	android:id="@+id/btnBinomial"
	    	android:layout_width="418dp"
	    	android:layout_height="50dp"
	    	android:layout_margin="10dp"
	    	android:background="@drawable/sc_btn_binomial"/>
				<Button 
	    	android:id="@+id/btnOpenEpi"
	    	android:layout_width="418dp"
	    	android:layout_height="50dp"
	    	android:layout_margin="10dp"
	    	android:background="@drawable/sc_btn_open_epi"/>
	</LinearLayout>
</LinearLayout>